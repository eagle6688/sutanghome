<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sutanghome.dao.ShoppingMapper">
	<sql id="QUERY_SELECT">
		select p.id paymentId, u.name userName, 'SHOPPING' type, s.channel, p.cost, p.medium, p.time, p.description, p.created, p.updated
		from (select * from payment
		<include refid="QUERY_WHERE_PAYMENT" />
		) p
		inner join (select * from shopping
		<include refid="QUERY_WHERE_SHOPPING" />
		) s on p.id = s.paymentid
		inner join user u on p.userid = u.id and u.deleted = 0
	</sql>
	<sql id="QUERY_WHERE_PAYMENT">
		<where>
			deleted = 0
			<if test="id != null and id > 0">and id = #{id}</if>
			<if test="userid != null and userid > 0">and userid = #{userId}</if>
			<if test="type != null">and type = #{type}</if>
			<if test="cost > 0">and cost = #{cost}</if>
			<if test="medium != null">and medium = #{medium}</if>
			<if test="description != null and description != ''">and description = #{description}</if>
			<if test="startTime != null">and time >= #{startTime}</if>
			<if test="endTime != null">and time < #{endTime}</if>
		</where>
	</sql>
	<sql id="QUERY_WHERE_SHOPPING">
		<where>
			<if test="id > 0">paymentid = #{id}</if>
			<if test="channel != null">and channel = #{channel}</if>
		</where>
	</sql>
	<sql id="QUERY_ORDER">
		order by created desc
	</sql>
	<sql id="QUERY_PAGING">
		<if test="skip >= 0 and take > 0">limit #{skip}, #{take}</if>
	</sql>

	<insert id="insert">
		insert into transfer (paymentid, channel)
		values (#{paymentId}, #{channel})
	</insert>
	<select id="count" resultType="java.lang.Integer">
		select count(0)
		from (
		<include refid="QUERY_SELECT" />
		) t
	</select>
	<select id="get">
		<include refid="QUERY_SELECT" />
		limit 1
	</select>
	<select id="list">
		<include refid="QUERY_SELECT" />
		<include refid="QUERY_ORDER" />
		<include refid="QUERY_PAGING" />
	</select>
	<update id="update">
		update transfer
		set channel = #{channel}
		where paymentid = #{id}
	</update>
</mapper>