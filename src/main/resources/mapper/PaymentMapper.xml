<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sutanghome.dao.FundMapper">
	<sql id="QUERY_SELECT">
		select id, userid, type, cost, medium, time, description, created, updated
	</sql>
	<sql id="QUERY_WHERE_CONDITION">
		deleted = 0
		<if test="userid != null and userid > 0">and userid = #{userId}</if>
		<if test="type != null">and type = #{type}</if>
		<if test="cost > 0">and cost = #{cost}</if>
		<if test="medium != null">and medium = #{medium}</if>
		<if test="description != null and description != ''">and description = #{description}</if>
	</sql>
	<sql id="QUERY_WHERE_NOTEQUAL">
		<where>
			<include refid="QUERY_WHERE_CONDITION" />
			<if test="id != null and id > 0">and id != #{id}</if>
			<if test="time != null">and time = #{time}</if>
		</where>
	</sql>
	<sql id="QUERY_WHERE">
		<where>
			<include refid="QUERY_WHERE_CONDITION" />
			<if test="id != null and id > 0">and id = #{id}</if>
			<if test="startTime != null">and time >= #{startTime}</if>
			<if test="endTime != null">and time < #{endTime}</if>
		</where>
	</sql>
	<sql id="QUERY_ORDER">
		order by created desc
	</sql>
	<sql id="QUERY_PAGING">
		<if test="skip >= 0 and take > 0">limit #{skip}, #{take}</if>
	</sql>

	<insert id="insert">
		insert into payment (userid, type, cost, medium, time, description)
		values (#{userId}, #{type}, #{cost}, #{medium}, #{time}, #{description})
	</insert>
	<select id="count" resultType="java.lang.Integer">
		select count(0)
		from payment
		<include refid="QUERY_WHERE_NOTEQUAL" />
	</select>
	<select id="get">
		<include refid="QUERY_SELECT" />
		from payment
		<include refid="QUERY_WHERE" />
		limit 1
	</select>
	<select id="list">
		<include refid="QUERY_SELECT" />
		from payment
		<include refid="QUERY_WHERE" />
		<include refid="QUERY_ORDER" />
		<include refid="QUERY_PAGING" />
	</select>
	<update id="update">
		update payment
		set userid = #{userId}, type = #{type}, cost = #{cost}, medium = #{medium}, time = #{time}, description = #{description}, updated = CURRENT_TIMESTAMP
		where id = #{id} and deleted = 0
	</update>
</mapper>